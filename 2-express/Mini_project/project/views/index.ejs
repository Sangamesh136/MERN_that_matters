<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create-post" method="post">
                <input class="block px-5 py-2 bg-zinc-800 mt-2 w-full rounder-lg" type="text" name="title"
                    placeholder="Title" />
                <textarea class="block px-5 py-2 bg-zinc-800 resize-none mt-2 w-full rounded-md" placeholder="task"
                    name="details"></textarea>
                <input class="mt-2 bg-blue-700 px-5 py-2 rounded-md" type="submit" value="Create" />
            </form>
        </div>
        <div class="tasks p-10 flex">
            <% if(files.length> 0) { %>
                <% files.forEach(function(val){ %>
                    <div class="task  bg-zinc-800 px-3 py-4 w-72  rounded-md text-white m-5">
                        <h1 class="text-white text-3xl tracking-tighter">
                            <%=val %>
                        </h1>
                        <div class="flex justify-between">
                        <a href="/tasks/<%= val %>" class="text-blue-800">Read More</a>
                        <a class="" href="/edit/<%= val %>">Edit</a>
                        </div>
                    </div>

                    <% }) %>
                        <% } else { %>
                            <div>
                                <p class="notask bg-blue-700 px-5 py-2 m-3 rounded-lg">No tasks yet!</p>
                            </div>
                            <% } %>
        </div>
    </div>
    </div>
</body>

</html>